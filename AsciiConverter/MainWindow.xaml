<Window x:Class="AsciiConverter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsciiConverter"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Title="Video to Ascii" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid x:Name="Grid">
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center"
                   Style="{DynamicResource MaterialDesignDisplay1TextBlock}"
                   x:Name="LabelBegin" Visibility="Hidden">
        Drag a Video on to Begin
        </TextBlock>
        <Button x:Name="button" Click="button_Click" VerticalAlignment="Top">

        </Button>

        <Canvas x:Name="Canvas">

        </Canvas>
    </Grid>

</Window>
